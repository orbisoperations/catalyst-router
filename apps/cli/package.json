{
  "name": "@catalyst/cli",
  "version": "0.0.0",
  "type": "module",
  "bin": {
    "catalyst": "./src/index.ts"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:unit": "vitest run --exclude '**/*{integration,container}*' --passWithNoTests",
    "test:integration": "vitest run --passWithNoTests container integration"
  },
  "dependencies": {
    "capnweb": "catalog:",
    "chalk": "catalog:",
    "commander": "catalog:",
    "@hono/node-server": "catalog:",
    "hono": "catalog:",
    "inquirer": "catalog:",
    "ws": "catalog:",
    "zod": "catalog:",
    "@catalyst/orchestrator-service": "workspace:*",
    "@catalyst/routing": "workspace:*",
    "@catalyst/authorization": "workspace:*"
  },
  "devDependencies": {
    "@types/inquirer": "catalog:dev",
    "@types/node": "catalog:dev",
    "@types/ws": "catalog:dev",
    "testcontainers": "catalog:testing",
    "tsx": "catalog:dev",
    "typescript": "catalog:dev",
    "vitest": "catalog:testing"
  }
}
