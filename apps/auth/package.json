{
  "name": "@catalyst/auth-service",
  "version": "0.0.0",
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": "./src/index.ts"
  },
  "private": true,
  "scripts": {
    "dev": "bun run --watch src/server.ts",
    "test": "bun test",
    "test:unit": "bun test $(find . \\( -name '*.test.ts' -o -name '*.spec.ts' \\) ! -path '*/node_modules/*' | grep -vE 'integration|container')",
    "test:integration": "bun test $(find . \\( -name '*.test.ts' -o -name '*.spec.ts' \\) ! -path '*/node_modules/*' | grep -E 'integration|container')",
    "start": "bun run src/server.ts"
  },
  "dependencies": {
    "@catalyst/authorization": "catalog:",
    "@catalyst/config": "catalog:",
    "@catalyst/service": "catalog:",
    "hono": "catalog:"
  },
  "devDependencies": {
    "@types/bun": "catalog:dev",
    "@types/node": "catalog:dev",
    "jose": "catalog:",
    "testcontainers": "catalog:testing",
    "typescript": "catalog:dev",
    "vitest": "^1.2.1"
  }
}
