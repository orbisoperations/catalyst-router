{
  // Zenoh router configuration for the 3-node Catalyst demo.
  //
  // The router listens on TCP port 7447 (Zenoh protocol) and exposes a
  // REST API on port 8000. The radar-publisher writes to the REST API,
  // and remote subscribers connect via the Zenoh protocol through the
  // Catalyst mesh TCP passthrough tunnel.
  mode: "router",
  listen: {
    endpoints: ["tcp/0.0.0.0:7447"]
  },
  // REST plugin â€” serves the Zenoh REST API for the radar-publisher.
  plugins: {
    rest: {
      http_port: 8000
    }
  },
  adminspace: {
    permissions: {
      read: true,
      write: false
    }
  }
}
