{
  "name": "catalyst-router",
  "private": true,
  "packageManager": "pnpm@9.12.1",
  "engines": {
    "node": ">=22.20.0"
  },
  "scripts": {
    "start:m0p2": "docker compose -f docker-compose/example.m0p2.compose.yaml up --build",
    "cli": "tsx apps/cli/src/index.ts",
    "prepare": "husky",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "compile:auth:docker": "docker build -f apps/auth/Dockerfile -t catalyst-auth .",
    "compile:gateway:docker": "docker build -f apps/gateway/Dockerfile -t catalyst-gateway .",
    "compile:orchestrator:docker": "docker build -f apps/orchestrator/Dockerfile -t catalyst-orchestrator .",
    "compile:all:docker": "pnpm run compile:auth:docker && pnpm run compile:gateway:docker && pnpm run compile:orchestrator:docker",
    "rpi:config": "pnpm exec tsx apps/rpi-config/src/index.ts",
    "test": "vitest run",
    "test:unit": "vitest run --reporter=verbose",
    "test:integration": "vitest run --reporter=verbose",
    "test:container": "turbo run test:container --concurrency=1"
  },
  "pnpm": {
    "overrides": {
      "graphql": "16.12.0"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.1",
    "esbuild": "catalog:dev",
    "@commitlint/config-conventional": "^20.3.1",
    "@eslint/js": "^9.39.2",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^17.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "pptxgenjs": "^4.0.1",
    "prettier": "^3.7.4",
    "turbo": "^2.8.10",
    "typescript-eslint": "^8.52.0"
  },
  "dependencies": {
    "@logtape/logtape": "^2.0.2"
  }
}
