{
  "name": "catalyst-router",
  "private": true,
  "scripts": {
    "start:m0p2": "docker compose -f docker-compose/example.m0p2.compose.yaml up --build",
    "cli": "tsx apps/cli/src/index.ts",
    "prepare": "husky",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "vitest run",
    "test:unit": "vitest run --exclude '**/e2e/**' --exclude '**/*.integration.*' --exclude '**/*.container.*'",
    "test:integration": "vitest run -t 'integration|container'"
  },
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*",
      "examples/*"
    ],
    "catalog": {
      "hono": "^4.11.3",
      "graphql": "16.12.0",
      "graphql-yoga": "^5.18.0",
      "zod": "^4.0.0",
      "capnweb": "^0.4.0",
      "@hono/capnweb": "^0.1.0",
      "@hono/node-server": "^1.19.7",
      "@hono/node-ws": "^1.1.1",
      "commander": "^14.0.2",
      "@graphql-tools/schema": "^10.0.31",
      "@graphql-tools/delegate": "^12.0.4",
      "@graphql-tools/stitch": "^10.1.8",
      "@graphql-tools/utils": "^11.0.0",
      "@graphql-tools/wrap": "^11.1.4",
      "@graphql-tools/stitching-directives": "^4.0.10",
      "@aws-sdk/client-s3": "^3.964.0",
      "jose": "^6.0.0",
      "argon2": "^0.44.0",
      "@cedar-policy/cedar-wasm": "^4.8.2",
      "@opentelemetry/api": "^1.9.0",
      "chalk": "^5.3.0",
      "inquirer": "^9.2.14",
      "ws": "^8.19.0",
      "better-sqlite3": "^11.9.1",
      "ip": "^2.0.1",
      "@catalyst/auth-service": "workspace:*",
      "@catalyst/authorization": "workspace:*",
      "@catalyst/cli": "workspace:*",
      "@catalyst/config": "workspace:*",
      "@catalyst/envoy-service": "workspace:*",
      "@catalyst/gateway-service": "workspace:*",
      "@catalyst/node-service": "workspace:*",
      "@catalyst/orchestrator-service": "workspace:*",
      "@catalyst/routing": "workspace:*",
      "@catalyst/sdk": "workspace:*",
      "@catalyst/service": "workspace:*",
      "@catalyst/telemetry": "workspace:*",
      "@catalyst/pki": "workspace:*",
      "@catalyst/types": "workspace:*"
    },
    "catalogs": {
      "dev": {
        "typescript": "^5.9.3",
        "@types/node": "^25.0.3",
        "tsup": "^8.5.1",
        "tsx": "^4.7.1",
        "@types/inquirer": "^9.0.7",
        "@types/ws": "^8.18.1",
        "@types/better-sqlite3": "^7.6.12"
      },
      "testing": {
        "vitest": "^4.0.16",
        "@vitest/coverage-v8": "^4.0.16",
        "testcontainers": "^11.11.0",
        "@playwright/test": "^1.57.0"
      }
    }
  },
  "resolutions": {
    "graphql": "16.12.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@eslint/js": "^9.39.2",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^17.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "pptxgenjs": "^4.0.1",
    "prettier": "^3.7.4",
    "typescript-eslint": "^8.52.0",
    "vitest": "catalog:testing"
  },
  "dependencies": {
    "@logtape/logtape": "^2.0.2"
  }
