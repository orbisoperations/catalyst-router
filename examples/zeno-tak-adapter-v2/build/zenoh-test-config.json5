{
  // Zenoh router configuration for integration tests
  mode: "router",

  listen: {
    endpoints: [
      "tcp/0.0.0.0:7447"
    ]
  },

  plugins_loading: {
    enabled: true,
    search_dirs: [
      "/",
      "/usr/lib",
      "/usr/local/lib",
      "~/.zenoh/lib"
    ]
  },

  plugins: {
    rest: {
      http_port: 8000
    },
    remote_api: {
      websocket_port: "10000"
    }
  }
}
