{
  "name": "zeno-tak-adapter-v2",
  "version": "0.1.0",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "build": "node build.mjs",
    "start": "node dist/index.js",
    "dev": "node build.mjs && node dist/index.js",
    "test": "pnpm run test:unit && pnpm run test:integration",
    "test:unit": "vitest run --exclude '**/*{integration,container}*' --passWithNoTests",
    "build:tests": "node build-tests.mjs",
    "test:integration": "vitest run --passWithNoTests container integration",
    "test:all": "pnpm run test:unit && pnpm run test:integration"
  },
  "dependencies": {
    "@eclipse-zenoh/zenoh-ts": "^1.7.2",
    "@tak-ps/node-cot": "latest",
    "@tak-ps/node-tak": "latest",
    "dotenv": "^16.4.5",
    "uuid": "^13.0.0",
    "zod": "^4"
  },
  "devDependencies": {
    "@types/node": "^20.14.9",
    "@types/uuid": "^11.0.0",
    "esbuild": "^0.27.3",
    "esbuild-plugin-wasm": "^1.1.0",
    "testcontainers": "^11.11.0",
    "typescript": "^5.5.3",
    "vitest": "catalog:testing"
  },
  "private": true
}
